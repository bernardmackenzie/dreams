<!-- Modal Create -->
<div class="modal fade" id="createkeranjang" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Create Data</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="keranjangFormCreate" action="/admin/create-keranjang" method="post" enctype="multipart/form-data">
                <div class="modal-body">     
                    
                    <div class="form-group">
                        <label for="KeranjangKeranjang" class="font-weight-bold"> Keranjang </label>
                        <input type="text" class="form-control Keranjang" name="Keranjang" id="KeranjangKeranjang"
                            placeholder="add Keranjang" autocomplete="off">
                        <div class="errorMessage text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label for="totalBayarKeranjang" class="font-weight-bold"> totalBayar </label>
                        <input type="text" class="form-control totalBayar" name="totalBayar" id="totalBayarKeranjang"
                            placeholder="add totalBayar" autocomplete="off">
                            <div class="errorMessage text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label for="jumlahKeranjang" class="font-weight-bold"> jumlah </label>
                        <input type="text" class="form-control jumlah" name="jumlah" id="jumlahKeranjang"
                            placeholder="add jumlah" autocomplete="off">
                            <div class="errorMessage text-danger"></div>
                    </div>
                    
                    
                </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    Save
