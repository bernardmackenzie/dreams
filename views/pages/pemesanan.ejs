        <!-- Modal Create -->
<div class="modal fade" id="createpemesanan" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Create Data</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="pemesananFormCreate" action="/admin/create-pemesanan" method="post" enctype="multipart/form-data">
                <div class="modal-body">     
                    
                    <div class="form-group">
                        <label for="userIdPemesanan" class="font-weight-bold"> userId </label>
                        <input type="text" class="form-control userId" name="userId" id="userIdPemesanan"
                            placeholder="add userId" autocomplete="off">
                        <div class="errorMessage text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label for="keranjangIdPemesanan" class="font-weight-bold"> keranjangId </label>
                        <input type="text" class="form-control keranjangId" name="keranjangId" id="keranjangIdPemesanan"
                            placeholder="add keranjangId" autocomplete="off">
                        <div class="errorMessage text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label for="tanggalIdPemesanan" class="font-weight-bold"> tanggalId </label>
                        <input type="number" class="form-control tanggalId" name="tanggalId" id="tanggalIdPemesanan"
                            placeholder="add tanggalId" autocomplete="off">
                        <div class="errorMessage text-danger"></div>
                    </div>
                    
                    
                    
                </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    Save
                </button>
            </div>
            </form>
        </div>
    </div>
